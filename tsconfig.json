{
  "compilerOptions": {
      "outDir": "./lib",
      "allowJs": true,
      "lib": ["dom", "dom.iterable", "esnext"],
      "target": "ES2022",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": false,
      "noEmitHelpers": false,
      "importHelpers": true,
      "isolatedModules": true,
      "resolveJsonModule": true,
      "jsx": "preserve",
      "incremental": false,
      "paths": {
        "@/*": ["./*"]
      }
  },
  "include": ["./src/**/**/*"],
  "exclude": ["node_modules"]
}